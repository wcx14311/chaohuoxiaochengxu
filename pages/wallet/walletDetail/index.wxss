/* pages/wallet/walletDetail/index.wxss */
.bzj-colorBG{
	display: flex;
	padding:30px 30rpx;
	border-bottom: 1px solid #efefef;
}
.bzj-colorBG .l-image image{
	display: block;
	width:70px;
	height:70px;
}
.bzj-colorBG .r-text{
	padding-top:4px;
	margin-left: 20px;
}
.bzj-colorBG .r-text .rt{
	color:#444;
	padding-top: 5px;
}
.bzj-colorBG .r-text .rt text{
	line-height: 30px;
	font-size:30px;
	font-weight: bold;
}
.sc-warpe{
	padding:30px 30rpx;
}
.sc-warpe .h-bg{
	background: #ffe7dd;
	padding: 60rpx;
}
.sc-warpe .h-bg .img-box{
	background: #fff;
	height:300rpx;
	text-align: center;
}
.sc-warpe .h-bg .img-box image{
	height:300rpx;
	display:inline-block;
	width:570rpx;
}
.button-section{
  position: fixed;
  bottom: 0;
  width:100%;
  box-sizing: border-box;
  padding:30rpx 30rpx 60rpx;
}
.button-section .btn{
  height: 40px;
  line-height: 40px;
  padding: 0;
  text-align: center;
}
.button-section .red-fill{
  background: #f43334;
  color:#fff;
}
.button-section .red-fill::after{
  border:none;
}
.button-section .red-fill.button-hover{
  background: #c20d0d;
}